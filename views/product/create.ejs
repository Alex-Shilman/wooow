
	<!-- views/product/create.ejs -->

	<!DOCTYPE html>
	<html lang="en" ng-app='iexchangeApp'>
		<head>
			<% include ../shared/header %>
			<title>Product</title>
		</head>
		<body class="container">

			<header>
				<% include ../shared/navbar %>
			</header>

			<main>
						<!-- form registration product -->
		<div id="loginModal" class="show" tabindex="-1" role="dialog" aria-hidden="false">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
						<h1 class="text-center">Create Product</h1>
					</div>
					<div class="modal-body">
						<form method="POST" action="/product-new" onsubmit="return validationProductForm()" enctype="multipart/form-data" class="form center-block">

							<!-- error message in the box -->
							<div id="errorShow" style="display:none" class="alert alert-danger alert-dismissible fade in" role="alert">
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
								<span id="gen_error"></span>
							</div>

							<!-- success message in the box -->
							<div id="successShow" style="display:none" class="alert alert-success alert-dismissible fade in" role="alert">
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
								<span id="gen_success"></span>
							</div>

							 <input type="hidden" name="succ_mess" id="succ_mess" value="<%= typeof successMessage != "undefined" ? successMessage : "" %>" />

							<div class="form-group">
								<label for="last_name">Name</label>
								<input type="text" id="name" name="name" class="form-control input-lg" placeholder="Name">
							</div>
							<div class="form-group">
								<label for="description">Description</label>
								<textarea id="description" name="description" rows="5" class="form-control input-lg" placeholder="description">
								</textarea>
							</div>
							<div class="form-group">
								<label for="price">Price</label>
								<input type="text" id="price" name="price" class="form-control input-lg" placeholder="Price">
							</div>
							<div class="form-group">
								<label for="category">Category</label>
								<input type="text" id="category" name="category" class="form-control input-lg" placeholder="category">
							</div>
							<div class="form-group">
								<label for="product">Upload</label>
								<input type="file" id="productimage" name="productimage" class="form-control valid">
							</div>
							<div class="form-group">
								<button class="btn btn-primary btn-lg btn-block">Create</button>
							</div>
						</form>
					</div>
				</div> <br>

			</main>

			<footer>
				<% include ../shared/footer %>
			</footer>
		</body>
	</html>